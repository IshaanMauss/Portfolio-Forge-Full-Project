{
  "functions": {
    "source": "functions",
    "runtime": "python312"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api_v2/**",
        "function": "api_v2"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}